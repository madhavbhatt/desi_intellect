<p id="notice"><%= notice %></p>

<h1>borrow History</h1>

<table width="650">
  <thead>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Amount</th>
    <th>Status</th>
    <th>Date</th>
    <th colspan="2">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @borrows.each do |borrow| %>
      <tr height="20">
        <td><%= borrow.from %></td>
        <td><%= borrow.to %></td>
        <% if borrow.amount %>
            <td>$<%= sprintf("%.2f",borrow.amount) %></td>
        <% else %>
            <td>$<%= "0.00" %></td>
        <% end %>
        <td><%= borrow.status %></td>
        <td><%= borrow.date %></td>
        <% if current_user.admin? %>
            <td><u><%= link_to "Approve",:controller => :borrows, :action => :approve, :id => borrow.id %></td>
            <td><u><%= link_to "Decline",:controller => :borrows, :action => :decline, :id => borrow.id %></td>
        <% else %>
            <td><u><%= link_to 'Show', borrow %></u></td>
            <td><u><%= link_to 'Destroy', borrow, method: :delete, data: { confirm: 'Are you sure?' } %></u></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
<% unless admin? %>
    <%= link_to 'New borrow', new_borrow_path %>
<% end %>