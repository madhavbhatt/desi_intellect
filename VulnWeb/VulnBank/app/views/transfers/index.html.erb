<p id="notice"><%= notice %></p>

<h1>Transfer History</h1>

<table width="650">
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Amount</th>
      <th>Start</th>
      <th>Effective</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr height="20">
        <td><%= transfer.from %></td>
        <td><%= transfer.to %></td>
        <td><%= transfer.amount %></td>
        <td><%= transfer.start %></td>
        <td><%= transfer.effective %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transfer', new_transfer_path %>
